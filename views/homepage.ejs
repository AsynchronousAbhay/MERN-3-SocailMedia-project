<%- include('./partials/header')%> <%- include('./partials/navigation')%>

<div class="homepage-container">
    <h1>Welcome to homepage</h1>
    <h3>ðŸ‘‹ <%= user.name %></h3>

    <a title="Create Post" style="text-decoration: none" href="/create-post"
        >âž•</a
    >
    <ol>
        <% posts.forEach(function(post){ %>

        <li class="post">
            <h2>
                <img
                    height="50"
                    src="/assets/<%= post.postedBy.avatar%>"
                    alt=""
                />
                | <%= post.postedBy.name%>
            </h2>
            <h3><%= post.title%></h3>
            <p><%= post.content%></p>
            <% if(post.multimedia.includes(".mp4")) { %>
            <video
                controls
                height="200"
                src="/assets/<%= post.multimedia %>"
            ></video>
            <% } else if(post.multimedia.includes(".png") |
            post.multimedia.includes(".jpg")){ %>
            <img height="200" src="/assets/<%= post.multimedia %>" alt="" />
            <% } else if(post.multimedia.includes(".mp3")){ %>
            <audio controls src="/assets/<%= post.multimedia %>"></audio>
            <% }%>
            <br />
            <a href="/like/<%= post._id%>"><%= post.likes.length %> Like</a> |
            <a href="/dislike/<%= post._id%>"
                ><%= post.dislikes.length %> Dislike</a
            >
            <!-- video /audio / image -->
        </li>

        <%})%>
    </ol>
</div>

<%- include('./partials/footer')%>
